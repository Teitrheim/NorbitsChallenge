@model NorbitsChallenge.Models.Car

<h2>Delete Car</h2>
<p>Are you sure you want to delete this car?</p>

<ul>
    <li>LicensePlate: @Model.LicensePlate</li>
    <li>Description: @Model.Description</li>
    <li>Model: @Model.Model</li>
    <li>Brand: @Model.Brand</li>
    <li>TireCount: @Model.TireCount</li>
    <li>CompanyId: @Model.CompanyId</li>
</ul>

<form method="post" asp-controller="Car" asp-action="Delete" asp-route-companyId="@Model.CompanyId" asp-route-licensePlate="@Model.LicensePlate">
    <button type="submit">Yes, Delete This Car</button>
</form>
<p>
    <a asp-controller="Car" asp-action="List" asp-route-companyId="@Model.CompanyId">No, take me back</a>
</p>
